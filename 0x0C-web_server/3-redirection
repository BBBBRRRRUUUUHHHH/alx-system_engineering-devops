#!/usr/bin/env bash
# Install Nginx if not already installed
sudo apt-get update
sudo apt-get install -y nginx
# Create a new Nginx site configuration
echo "
server {
    listen 80;
    server_name your_domain.com;  # Replace with your actual domain
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
    # ... Additional server configurations if needed ...
}
" | sudo tee /etc/nginx/sites-available/redirect
# Create a symbolic link to enable the site configuration
sudo ln -s /etc/nginx/sites-available/redirect /etc/nginx/sites-enabled/
# Test Nginx configuration and restart the server
sudo nginx -t
sudo systemctl restart nginx
echo "Nginx configuration updated. /redirect_me will now redirect to the specified URL."

